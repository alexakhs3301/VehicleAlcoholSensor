<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VehicleAlcoholSensor.Mobile.App.Views.Connect"
             Title="Connect">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Frame x:Name="BtnConnect" BackgroundColor="Red"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HeightRequest="200"
               WidthRequest="200"
               Margin="20"
               IsClippedToBounds="True"
               CornerRadius="100"
               >

            <Image x:Name="ImgPower" Source="Power.svg" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="50" HeightRequest="50"/>


        </Frame>
        <Label x:Name="LblConnectedDevice" HorizontalOptions="Center" VerticalOptions="Center" FontSize="18"/>
    </StackLayout>
</ContentPage>